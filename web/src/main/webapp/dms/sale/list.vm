<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
		<div class="center sliding">我的销售</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="sale.list" class="page no-tabbar">
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="list-block" style="font-size: 15px;">
				<ul class="page-settings">
					<li class="row" style="text-align: center;">
						<div class="col-33" style="width: 33%;">
							<div style="margin: 0.6rem 0 0 0;">
    							<select style="margin: 0 auto; width: 35px; height: 100%;">
									<option>01月</option>
									<option>02月</option>
									<option>03月</option>
    								<option>04月</option>
									<option selected>05月</option>
									<option>06月</option>
									<option>07月</option>
									<option>08月</option>
									<option>09月</option>
									<option>10月</option>
									<option>11月</option>
									<option>12月</option>
    							</select>
                            </div>
							<div class="color-gray">2016年</div>
                        </div>
						<div class="col-33" style="width: 33%;">
							<h3 id="sale/index/a">0.00</h3>
							<div class="color-gray">今天(元)</div>
                        </div>
						<div class="col-33" style="width: 33%;">
							<h3 id="sale/index/b">0.00</h3>
							<div class="color-gray">本月(元)</div>
                        </div>
					</li>
                </ul>
            </div>
			
			#if($!{saleList})
			#set($d = '00')
			<div class="list-block" style="font-size: 14px;">
				#foreach($sale in $!{saleList})
				#set($dd = $!stringUtil.substring($!{sale.tradeDate}, 8, 10))
				#if($d != $dd)
					#if($d != '00') </ul> #end
				<div class="content-block-title" style="margin-top: 10px;">$dd日</div>
				<ul>
					#set($d = $dd)
				#end
					<li>
						<a href="$!{env.appUrl}/sale/detail.htm?tradeNo=$!{sale.tradeNo}" class="item-link item-content">
							<div class="item-media"><i class="iconfont icon-goods"></i></div>
							<div class="item-inner">
								<div class="item-title">线下订单 $!{sale.tradeNo}</div>
								<div class="item-after">$!formatUtil.getAmountFormat($!{sale.amount})</div>
							</div>
						</a>
					</li>
				#end
				</ul>
            </div>
			#end
        </div>
    </div>
</div>