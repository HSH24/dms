<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
		<div class="center sliding">我的资金</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="cashflow.index" class="page no-tabbar">
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="list-block" style="font-size: 15px;">
				<ul class="page-settings">
					<li class="row" style="text-align: center;">
						<a href="#" class="col-33 item-link" style="width: 33%;" data-ignore-cache="true">
							<h3>$!formatUtil.getAmountFormat($!{cashflow.drAmount})</h3>
							<div class="color-gray">收入</div>
                        </a>
						<a href="#" class="col-33 item-link" style="width: 33%;" data-ignore-cache="true">
							<h3>$!formatUtil.getAmountFormat($!{cashflow.crAmount})</h3>
							<div class="color-gray">支出</div>
                        </a>
						<a href="#" class="col-33 item-link" style="width: 33%;" data-ignore-cache="true">
							<h3>$!formatUtil.getAmountFormat("0")</h3>
							<div class="color-gray">余额</div>
                        </a>
					</li>
                </ul>
            </div>
			
			<div class="list-block" style="font-size: 14px;">
				<ul>
					#foreach($cashflow in $!{cashflowList})
					<li>
						<div class="item-content">
							<div class="item-media">#$!{cashflow.cashflowId}</div>
							<div class="item-inner">
								<div class="item-title">$!{cashflow.tradeDate} $!{cashflow.summary}</div>
								<div class="item-after">￥$!formatUtil.getAmountFormat($!{cashflow.crAmount})</div>
							</div>
						</div>
					</li>
					#end
				</ul>
            </div>
        </div>
    </div>
</div>