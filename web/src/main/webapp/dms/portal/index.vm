<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no, minimal-ui" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<title>好社惠 | 亭主终端管理系统</title>
		#ICON()
		#CSSM(["framework7", "iconfont"])
		#UA()
	</head>
	<body onload="setPassport();">
		<!-- Should be a direct child of BODY -->
		<div class="login-screen modal-in">
			<!-- Default view-page layout -->
			<div class="view">
				<div class="pages">
    				<div data-page="portal.index" class="page">
    					<!-- page-content has additional login-screen content -->
    					<div class="page-content login-screen-content">
    						<div class="login-screen-title" style="margin-top: 20%;">
								<img src="$!{env.imgUrl}/image/portal/logo.jpg" style="width: 100px;"></img>
							</div>
    						<!-- Login form -->
    						<form action="$!{env.appUrl}/login.htm" method="POST">
    							<div class="list-block">
    								<ul>
    									<li class="item-content">
    										<div class="item-inner">
    											<div class="item-title label" style="text-align: center;">+86</div>
    											<div class="item-input">
                                                    <input type="text" name="passport" placeholder="手机号码"></input>
    											</div>
    										</div>
    									</li>
    									<li class="item-content">
    										<div class="item-inner">
    											<div class="item-title label" style="text-align: center;">密码</div>
    											<div class="item-input">
                                                    <input type="password" name="password" placeholder="请输入登录密码"></input>
    											</div>
    										</div>
    									</li>
    								</ul>
    							</div>
    							<div class="list-block" style="width: 90%;">
    								<ul>
    									<li>
    										<a href="javascript:submit();" class="button button-big button-fill" style="background-color: #04BE02;">登 录</a>
    									</li>
    								</ul>
    								<div class="list-block-label">
    									<a href="#" data-popup=".popup-forgetPassword" class="open-popup">忘记登录密码？</a>
    								</div>
    							</div>
    						</form>
    					</div>
    				</div>
                </div>
			</div>
		</div>
		
		<div class="popup popup-forgetPassword">
			<div class="view view-main">
				<!-- Top Navbar-->
				<div class="navbar" style="background: #ffffff;">
					<div class="navbar-inner">
						<div class="left"><a href="#" class="close-popup link" style="color: #8f8f94;"> <i class="icon iconfont icon-close" style="font-size: 21px;"></i><span></span></a></div>
					</div>
				</div>
				<div class="pages navbar-through">
    				<div data-page="portal.forgetPassword" class="page">
    					<div class="page-content login-screen-content">
    						<div class="login-screen-title" style="font-size: 25px;">通过短信找回密码</div>
    						<form>
    							<div class="list-block">
    								<ul>
    									<li class="item-content">
    										<div class="item-inner">
    											<div class="item-title label" style="text-align: center;">账号</div>
    											<div class="item-input">
                                                    <input type="text" name="passport" placeholder="手机号码"></input>
    											</div>
    										</div>
    									</li>
    									<li class="item-content">
    										<div class="item-inner">
    											<div class="item-title label" style="text-align: center;">验证码</div>
    											<div class="item-input">
													<div class="row">
														<div class="col-60">
															<input type="text" name="checkCode" placeholder="短信校验码"></input>
                                                        </div>
														<div class="col-40" style="margin-top: 8px;">
															<a href="javascript:sendCheckCode();" class="button" id="sendBtn">点击获取</a>
														</div>
                                                    </div>
    											</div>
    										</div>
    									</li>
    								</ul>
    							</div>
    							<div class="list-block" style="width: 90%;">
    								<ul>
    									<li>
    										<a href="javascript:validate();" class="button button-big button-fill" style="background-color: #04BE02;">提 交</a>
    									</li>
    								</ul>
    								<div class="list-block-label">
    									<a href="#">No verification code received?</a>
    								</div>
    							</div>
    						</form>
    					</div>
    				</div>
                </div>
			</div>
        </div>
		
		#JSM(["framework7", "jquery", "jquery.cookie"])
		#JS_ENV_VAL()
		<script>
		var appUrl = '$!{env.appUrl}';
    	var appName = '$!{env.appName}';
		var domain = '$!{env.domain}';
        </script>
		<script type="text/javascript" src="$!{env.imgUrl}/js/portal/index.js"></script>
		<script type="text/javascript" src="$!{env.imgUrl}/js/account/setPassword.js"></script>
	</body>
</html>