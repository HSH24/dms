<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"><a href="#" class="back link"> <i class="icon icon-back"></i><span></span></a></div>
		<div class="center sliding">我的库存</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="stock.index" class="page no-tabbar">
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="list-block accordion-list" style="font-size: 14px;">
				<ul>
					#foreach($stock in $!{stockList})
					<li class="accordion-item">
						<a href="#" class="item-content item-link">
							<div class="item-media"><i class="iconfont icon-goods"></i></div>
							<div class="item-inner">
								<div class="item-title">$!{stock.itemName}</div>
								<div class="item-after">$!formatUtil.getAmountFormat($!{stock.amount})</div>
							</div>
						</a>
						<div class="accordion-item-content">
							<div class="content-block">
                                <p>数量：$!{stock.stock}</p>
								<p>单价：￥$!formatUtil.getAmountFormat($!{stock.price})</p>
							</div>
						</div>
					</li>
					#end
                </ul>
            </div>
        </div>
    </div>
</div>