<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"></div>
		<div class="center sliding">采购中心</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
			<a href="javascript:item_list_scan();" class="link icon-only"> <i class="icon iconfont icon-scan" style="font-size: 21px;"></i><span></span></a>
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="item.list" class="page">
		<!-- Search bar -->
		<form data-search-list=".list-block-search" data-search-in=".item-title" class="searchbar searchbar-init">
			<div class="searchbar-input">
				<input type="search" placeholder="Search" /><a href="#" class="searchbar-clear"></a>
			</div><a href="#" class="searchbar-cancel">取消</a>
		</form>
		
		<!-- Search bar overlay -->
		<div class="searchbar-overlay"></div>
			
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="list-block accordion-list list-block-search searchbar-found" style="font-size: 15px;">
				<ul>
					#foreach($item in $!{itemList})
						<!-- 不存在sku -->
						
						<!-- 存在sku -->
						#foreach($sku in $!{item.skuList})
                        <li class="accordion-item">
    						<a href="#" class="item-content item-link">
    							<div class="item-media">
    								<img src="$!{item.itemFileList.get(0).filePath}" style="width: 50px;"></img>
    							</div>
    							<div class="item-inner">
    								<div class="item-title">
    									$!{item.itemName} ￥$!formatUtil.getAmountFormat($!{sku.price})<br />
                                        <span style="font-size: 12px; color: #8e8e93;">$!{sku.propertiesName}</span>
    								</div>
                                </div>
    						</a>
    						<div class="item-content">
        						<div class="item-inner">
    								<div class="item-title" style="font-size: 13px; color: #8e8e93;">供应商：$!{item.supName}</div>
    								<div class="item-after">
    									<a href="javascript:item_list_trade('$!{item.itemId}', '$!{sku.skuId}', '$!{item.itemName}', '$!{sku.propertiesName} ￥$!formatUtil.getAmountFormat($!{sku.price})');" class="button color-orange" data-ignore-cache="true">立即下单</a>
    									<a href="javascript:item_list_cart('$!{item.itemId}', '$!{sku.skuId}');" class="button color-gray" style="margin-left: 10px;" data-ignore-cache="true">添加进货车</a>
    								</div>
        						</div>
                            </div>
    						<div class="accordion-item-content">
    							<div class="content-block">
    								<p style="font-size: 15px;">$!{item.itemName}|$!{sku.propertiesName}</p>
    								<p>$!{item.remark}</p>
									<p>条码：$!{sku.barCode}</p>
    							</div>
    						</div>
    					</li>
						#end
					#end
				</ul>
			</div>
        </div>
		
		<form id="item/list/trade" action="$!{env.appUrl}/trade/create.htm" method="POST" class="ajax-submit">
			<input type="hidden" id="item_list_trade_itemId" name="itemId"></input>
			<input type="hidden" id="item_list_trade_skuId" name="skuId"></input>
			<input type="hidden" id="item_list_trade_quantity" name="quantity"></input>
        </form>
		
		<form id="item/list/cart" action="$!{env.appUrl}/cart/add.htm" method="POST" class="ajax-submit">
			<input type="hidden" id="item_list_cart_itemId" name="itemId"></input>
			<input type="hidden" id="item_list_cart_skuId" name="skuId"></input>
        </form>
    </div>
</div>