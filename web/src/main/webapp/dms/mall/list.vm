<!-- We don't need full layout here, because this page will be parsed with Ajax-->
<!-- Top Navbar-->
<div class="navbar">
	<div class="navbar-inner">
		<div class="left"></div>
		<div class="center sliding">派送订单</div>
		<div class="right">
			<!-- Right link contains only icon - additional "icon-only" class-->
			<a href="javascript:item_list_scan();" class="link icon-only"> <i class="icon iconfont icon-scan" style="font-size: 21px;"></i><span></span></a>
		</div>
	</div>
</div>
<div class="pages">
	<!-- Page, data-page contains page name-->
	<div data-page="item.list" class="page">
		<!-- Search bar -->
		<form data-search-list=".list-block-search" data-search-in=".item-title" class="searchbar searchbar-init">
			<div class="searchbar-input">
				<input type="search" placeholder="Search" /><a href="#" class="searchbar-clear"></a>
			</div><a href="#" class="searchbar-cancel">取消</a>
		</form>
		
		<!-- Search bar overlay -->
		<div class="searchbar-overlay"></div>
			
		<!-- Scrollable page content-->
		<div class="page-content">
			<div class="list-block media-list list-block-search searchbar-found" style="font-size: 14px;">
				<ul>
					<li>
						<div class="item-content">
							<div class="item-inner" style="display: inherit;">
								<div class="item-title" style="font-weight: 400;">流水号：#1</div>
								<div class="item-after">订单号：1000000000</div>
							</div>
						</div>
					</li>
					<li>
						<a href="$!{env.appUrl}/mall/detail.htm?tradeNo=$!{trade.tradeNo}" class="item-content" style="color: inherit;" data-ignore-cache="true">
							<div class="item-media" style="padding-top: 7px; padding-bottom: 8px;">
								<img src="$!{env.imgUrl}/image/item/detail-3.jpg" style="width: 50px;"></img>
							</div>
							<div class="item-inner">
								<div class="item-title-row" style="margin-top: 3px;">
									<div class="item-title" style="font-weight: 400;">特仑苏纯牛奶利乐苗条装</div>
									<div class="item-after"></div>
								</div>
								<div class="item-title-row" style="margin-top: 3px;">
									<div class="item-subtitle" style="font-size: 12px; color: #8e8e93;">250ml×8盒×3提 共24盒</div>
									<div class="item-after">×10</div>
								</div>
							</div>
                        </a>
					</li>
					<li>
						<a href="$!{env.appUrl}/mall/detail.htm?tradeNo=$!{trade.tradeNo}" class="item-link item-content" style="min-height: 0;" data-ignore-cache="true">
							<div class="item-inner" style="display: inherit; min-height: 0; text-align: center; padding-top: 7px; padding-bottom: 6px;">
								<div class="item-title" style="font-weight: 400; font-size: 13px; width: 100%;">查看全部1件商品</div>
							</div>
						</a>
					</li>
					<li>
						<div class="item-content">
							<div class="item-inner" style="display: inherit;">
                                <div class="item-title" style="font-weight: 400;">总件数：<span style="color: #ff5500;">10</span></div>
								<div class="item-after"></div>
							</div>
						</div>
					</li>
				</ul>
			</div>
        </div>
		
		<form id="item/list/trade" action="$!{env.appUrl}/trade/create.htm" method="POST" class="ajax-submit">
			<input type="hidden" id="item_list_trade_itemId" name="itemId"></input>
			<input type="hidden" id="item_list_trade_skuId" name="skuId"></input>
        </form>
		
		<form id="item/list/cart" action="$!{env.appUrl}/cart/add.htm" method="POST" class="ajax-submit">
			<input type="hidden" id="item_list_cart_itemId" name="itemId"></input>
			<input type="hidden" id="item_list_cart_skuId" name="skuId"></input>
        </form>
    </div>
</div>