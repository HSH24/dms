<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- 账单 -->
	<bean id="tradeAction" class="com.hsh24.dms.trade.action.TradeAction" parent="baseAction" scope="request">
		<property name="tradeService" ref="tradeService" />
		<property name="receiptService" ref="receiptService" />
	</bean>
	
	<bean id="tradeService" class="com.hsh24.dms.trade.service.impl.TradeServiceImpl">
		<property name="transactionTemplate" ref="transactionTemplate" />
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="orderService" ref="orderService" />
		<property name="orderRefundService" ref="orderRefundService" />
		<property name="cartService" ref="cartService" />
		<property name="supplierService" ref="supplierService" />
		<property name="itemService" ref="itemService" />
		<property name="bankAcctService" ref="bankAcctService" />
		<property name="cashflowService" ref="cashflowService" />
		<property name="tradeLogService" ref="tradeLogService" />
		<property name="tradeDao" ref="tradeDao" />
	</bean>
	
	<bean id="tradeDao" class="com.hsh24.dms.trade.dao.impl.TradeDaoImpl" parent="baseDao" />
	
</beans>