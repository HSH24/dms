<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- 账单 -->
	<bean id="tradeAction" class="com.hsh24.dms.trade.action.TradeAction" parent="baseAction" scope="request">
		<property name="tradeService" ref="tradeService" />
	</bean>
	<bean id="tradeService" class="com.hsh24.dms.trade.service.impl.TradeServiceImpl">
		<property name="transactionTemplate" ref="transactionTemplate" />
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="orderService" ref="orderService" />
		<property name="orderRefundService" ref="orderRefundService" />
		<property name="cartService" ref="cartService" />
		<property name="supplierService" ref="supplierService" />
		<property name="itemService" ref="itemService" />
		<property name="tradeDao" ref="tradeDao" />
	</bean>
	<bean id="tradeDao" class="com.hsh24.dms.trade.dao.impl.TradeDaoImpl" parent="baseDao" />
	
	<!-- 订单信息 -->
	<bean id="orderService" class="com.hsh24.dms.trade.service.impl.OrderServiceImpl">
		<property name="orderDao" ref="orderDao" />
	</bean>
	<bean id="orderDao" class="com.hsh24.dms.trade.dao.impl.OrderDaoImpl" parent="baseDao" />
	
	<!-- 退款订单信息 -->
	<bean id="orderRefundService" class="com.hsh24.dms.trade.service.impl.OrderRefundServiceImpl">
		<property name="orderRefundDao" ref="orderRefundDao" />
	</bean>
	<bean id="orderRefundDao" class="com.hsh24.dms.trade.dao.impl.OrderRefundDaoImpl" parent="baseDao" />
	
</beans>