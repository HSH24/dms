<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="userShopAction" class="com.hsh24.dms.user.action.UserShopAction" parent="baseAction" scope="request">
		<property name="userShopService" ref="userShopService" />
	</bean>
	
	<bean id="userShopService" class="com.hsh24.dms.user.service.impl.UserShopServiceImpl">
		<property name="userShopDao" ref="userShopDao" />
	</bean>
	
	<bean id="userShopDao" class="com.hsh24.dms.user.dao.impl.UserShopDaoImpl" parent="baseDao" />
	
</beans>