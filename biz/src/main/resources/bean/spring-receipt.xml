<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="receiptAction" class="com.hsh24.dms.receipt.action.ReceiptAction" parent="baseAction" scope="request">
		<property name="receiptService" ref="receiptService" />
	</bean>
	
	<bean id="receiptService" class="com.hsh24.dms.receipt.service.impl.ReceiptServiceImpl">
		<property name="transactionTemplate" ref="transactionTemplate" />
		<property name="memcachedCacheService" ref="memcachedCacheService" />
		<property name="tradeService" ref="tradeService" />
		<property name="orderService" ref="orderService" />
		<property name="receiptLogService" ref="receiptLogService" />
		<property name="receiptDao" ref="receiptDao" />
		<property name="receiptDetailDao" ref="receiptDetailDao" />
	</bean>
	
	<bean id="receiptDao" class="com.hsh24.dms.receipt.dao.impl.ReceiptDaoImpl" parent="baseDao" />
	<bean id="receiptDetailDao" class="com.hsh24.dms.receipt.dao.impl.ReceiptDetailDaoImpl" parent="baseDao" />
	
</beans>