<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="stockAction" class="com.hsh24.dms.stock.action.StockAction" parent="baseAction" scope="request">
		<property name="stockService" ref="stockService" />
	</bean>
	
	<bean id="stockService" class="com.hsh24.dms.stock.service.impl.StockServiceImpl">
		<property name="stockDao" ref="stockDao" />
	</bean>
	
	<bean id="stockDao" class="com.hsh24.dms.stock.dao.impl.StockDaoImpl" parent="baseDao" />
	
</beans>