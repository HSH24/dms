<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="saleAction" class="com.hsh24.dms.sale.action.SaleAction" parent="baseAction" scope="request">
		<property name="saleService" ref="saleService" />
	</bean>
	
	<bean id="saleService" class="com.hsh24.dms.sale.service.impl.SaleServiceImpl">
		<property name="saleDao" ref="saleDao" />
		<property name="saleDetailDao" ref="saleDetailDao" />
	</bean>
	
	<bean id="saleDao" class="com.hsh24.dms.sale.dao.impl.SaleDaoImpl" parent="baseDao" />
	<bean id="saleDetailDao" class="com.hsh24.dms.sale.dao.impl.SaleDetailDaoImpl" parent="baseDao" />
	
</beans>