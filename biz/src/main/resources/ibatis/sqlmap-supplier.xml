<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="supplier">
	
	<typeAlias alias="supplier" type="com.hsh24.dms.api.supplier.bo.Supplier" />
	
	<select id="getSupplier" parameterClass="supplier" resultClass="supplier">
	<![CDATA[
		SELECT t.sup_id AS supId,
			   t.sup_name AS supName
		  FROM oms.dms_vw_supplier t
		 WHERE t.state = 'U'
		   AND t.sup_id = #supId#
	]]>
	</select>
	
	<select id="getSupplierList" parameterClass="supplier" resultClass="supplier">
	<![CDATA[
		SELECT t.sup_id AS supId,
			   t.sup_name AS supName
		  FROM oms.dms_vw_supplier t
		 WHERE t.state = 'U'
		   AND t.sup_id IN
	]]>
		<iterate property="codes" open="(" close=")" conjunction=",">#codes[]#</iterate>
	</select>
	
</sqlMap>
