<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="shop">
	
	<typeAlias alias="shop" type="com.hsh24.dms.api.shop.bo.Shop" />
	
	<select id="getShop" parameterClass="shop" resultClass="shop">
	<![CDATA[
		SELECT t.shop_id AS shopId,
			   t.shop_name AS shopName,
			   t.region_id AS regionId
		  FROM mdm.mdm_tb_shop t
		 WHERE t.state = 'U'
		   AND t.shop_id = #shopId#
	]]>
	</select>
	
</sqlMap>