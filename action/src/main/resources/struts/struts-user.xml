<!DOCTYPE struts PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
 "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="{http://dms}dms$user"
		extends="{http://dms}dms$framework" namespace="/user">
		
		<!-- 发送验证码 -->
		<action name="sendCheckCode" class="userAccAction" method="sendCheckCode"></action>
		
		<action name="validateCheckCode" class="userAccAction" method="validateCheckCode"></action>
		
		<!-- 重置密码 -->
		<action name="setPassword" class="userAccAction" method="setPassword">
			<result name="success">/dms/user/setPassword.vm</result>
		</action>
		
		<action name="updatePassword" class="userAccAction" method="updatePassword" />

	</package>
</struts>