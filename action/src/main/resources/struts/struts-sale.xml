<!DOCTYPE struts PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
 "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="{http://dms}dms$sale"
		extends="{http://dms}dms$framework" namespace="/sale">
		
		<action name="stats" class="saleAction" method="stats">
			<interceptor-ref name="authenticationStack" />
		</action>
		
		<action name="list" class="saleAction" method="list">
			<interceptor-ref name="authenticationStack" />
			<result name="success">/dms/sale/list.vm</result>
		</action>
		
		<action name="detail" class="saleAction" method="detail">
			<interceptor-ref name="authenticationStack" />
			<result name="success">/dms/sale/detail.vm</result>
		</action>
		
	</package>
</struts>