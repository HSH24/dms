<!DOCTYPE struts PUBLIC
 "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
 "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="{http://dms}dms$auth"
		extends="{http://dms}dms$framework" namespace="/account">

		<!-- 发送验证码 -->
		<action name="sendCheckCode" class="accountAction" method="sendCheckCode"></action>
		
		<action name="validateCheckCode" class="accountAction" method="validateCheckCode"></action>
		
		<!-- 重置密码 -->
		<action name="setPassword" class="accountAction" method="setPassword">
			<result name="success">/dms/account/setPassword.vm</result>
		</action>
		
		<action name="updatePassword" class="accountAction" method="updatePassword" />
		
	</package>
</struts>